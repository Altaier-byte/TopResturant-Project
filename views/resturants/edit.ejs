<%- include("../partials/header") %>


<div class="container">
<div class="row">
	
<h1 style="text-align: center">Edit <%=resturant.name%></h1>

<div style="width:30%; margin: 25px auto ">

<form class="form-horizontal" action="/resturants/<%=resturant._id%>?_method=PUT" method="POST">
  <div class="form-group">
    <div class="col-lg-12">
      <input type="text" name="resturant[name]" class="form-control" value="<%= resturant.name %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <input type="text" class="form-control" name="resturant[image]" value="<%= resturant.image %>"> 
    </div>
  </div>
	
	<div class="form-group">
    <div class="col-lg-12">
      <input type="number" name="resturant[price]" class="form-control" value="<%=resturant.price%>" min="0.00" step="0.25" required>
    </div>
  </div>
	
	<div class="form-group">
    <div class="col-lg-12">
		<textarea id="desctxt" name="resturant[description]" class="form-control" rows="10"><%= resturant.description %></textarea>
		
    </div> 
	</div>
	
    <div class="form-group">
     <div class="col-lg-12" >
		 		<button id="btn-new-form" class="btn bnt-lg btn-block btn-success">Edit a Review</button>

		</div>
    </div>
  
</form>
<a href="/resturants">Go Back</a>
</div>
	</div>
</div>




<%- include("../partials/footer") %>